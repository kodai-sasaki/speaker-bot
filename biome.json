{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "formatter": {
    "indentStyle": "space"
  },
  "files": {
    "ignore": ["node_modules", ".next", ".vercel", ".pnpm", ".git"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "useMediaCaption": "off"
      }
    }
  }
}
